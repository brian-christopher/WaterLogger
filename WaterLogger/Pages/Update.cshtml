@page "{id:int}"
@model WaterLogger.Pages.UpdateModel
@{
}
<h4>Update Record</h4>
<hr />

<form method="post">
	<div class="mb-3">
		<label asp-for="DrinkingWater.Date" class="form-label"></label>
		<input asp-for="DrinkingWater.Date" class="form-control" />
		<span asp-validation-for="DrinkingWater.Date" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="DrinkingWater.Quantity" class="form-label"></label>
		<input asp-for="DrinkingWater.Quantity" class="form-control" />
		<span asp-validation-for="DrinkingWater.Quantity" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<select class="form-select" asp-for="DrinkingWater.Measure" asp-items="@(new SelectList(Model.MeasuresList, "Value", "Key"))">
		</select>
		<span asp-validation-for="DrinkingWater.Measure" class="text-danger"></span>
	</div>

	<input type="hidden" asp-for="DrinkingWater.Id" />
	<button type="submit" class="btn btn-primary">Update</button>
	<a asp-area="" asp-page="Index">Back to list</a>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}